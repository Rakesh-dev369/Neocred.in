# NeoCred Backend Environment Variables - EXAMPLE
# Copy this file to .env and add your real API keys and secrets
# This file is committed to GitHub as a template

# ==========================================
# CORE APPLICATION
# ==========================================
ENVIRONMENT=development
PORT=8000
HOST=127.0.0.1
SECRET_KEY=your-super-secret-jwt-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==========================================
# DATABASE CONFIGURATION
# ==========================================
DATABASE_URL=postgresql://user:password@localhost/neocred
REDIS_URL=redis://localhost:6379

# ==========================================
# SUPABASE AUTHENTICATION
# ==========================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# ==========================================
# AI & LLM INTEGRATION
# ==========================================
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key
LLM_TEMPERATURE=0.1
MAX_AUTOML_TRIALS=100

# ==========================================
# MONITORING & OBSERVABILITY
# ==========================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO
ENABLE_METRICS=true
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# ==========================================
# MLFLOW & MODEL REGISTRY
# ==========================================
MLFLOW_TRACKING_URI=sqlite:///mlflow.db
MLFLOW_EXPERIMENT_NAME=neocred_credit_risk
MLFLOW_MODEL_REGISTRY=neocred_credit_model
AUTOML_PIPELINE_TIMEOUT=3600

# ==========================================
# EXTERNAL SERVICES
# ==========================================
FINANCIAL_API_URL=https://api.example.com
WEBHOOK_URL=https://your-app.com/webhook

# ==========================================
# REAL-TIME FEATURES
# ==========================================
WEBSOCKET_ENABLED=true
SSE_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
RABBITMQ_URL=amqp://localhost:5672

# ==========================================
# DATA SCIENCE & ANALYTICS
# ==========================================
JUPYTER_PORT=8888
JUPYTER_TOKEN=your-jupyter-token
PLOTLY_USERNAME=your-plotly-username
PLOTLY_API_KEY=your-plotly-api-key

# ==========================================
# FEATURE FLAGS
# ==========================================
AUTOML_ENABLED=true
WEBSOCKET_ENABLED=true
SSE_ENABLED=true