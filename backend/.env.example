# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.7

# Server Configuration
PORT=8001
HOST=0.0.0.0
WORKERS=4
ENVIRONMENT=production
DEBUG=false

# Security
SECRET_KEY=neocred-enterprise-secret-key-change-in-production
ALLOWED_HOSTS=neocred.in,*.neocred.in,localhost,127.0.0.1

# Database Configuration
DATABASE_URL=sqlite:///./neocred_enterprise.db
# For PostgreSQL: postgresql://user:password@localhost/neocred

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=1800
NEWS_CACHE_TTL=1800
DIGEST_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CHAT_RATE_LIMIT=10

# Caching
CACHE_ENABLED=true

# Monitoring
METRICS_ENABLED=true
LOG_LEVEL=INFO

# Circuit Breaker
CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# External APIs
REQUEST_TIMEOUT=10
MAX_RETRIES=3